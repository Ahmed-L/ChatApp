<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/signin_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:alpha="1"
        android:background="@drawable/round_corner"
        android:backgroundTint="#6D000428"
        android:text="Sign in"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_box2" />

    <EditText
        android:id="@+id/Username_box2"
        style="@android:style/Widget.EditText"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:alpha="1"
        android:autofillHints=""
        android:background="@drawable/round_corner"
        android:drawableStart="@drawable/person_red_icon"
        android:drawableLeft="@drawable/person_red_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_box2"
        style="@android:style/Widget.DeviceDefault.Light.EditText"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FAFAFA"
        android:baselineAligned="false"
        android:drawableStart="@drawable/edit_icon_password"
        android:drawableLeft="@drawable/edit_icon_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username_box2" />

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="250dp"
        android:layout_height="19dp"
        android:layout_marginTop="90dp"
        android:baselineAligned="true"
        android:text="Don't have an account? Sign up now!"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>