<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_2"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/Username_box2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:alpha="1"
        android:autofillHints=""
        android:background="@drawable/round_corner"
        android:drawableStart="@drawable/person_red_icon"
        android:drawableLeft="@drawable/person_red_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_signup" />

    <EditText
        android:id="@+id/RealUsernameBox"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:alpha="1"
        android:autofillHints=""
        android:background="@drawable/round_corner"
        android:drawableStart="@drawable/person_red_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username_box2" />

    <EditText
        android:id="@+id/password_box2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FAFAFA"
        android:drawableStart="@drawable/edit_icon_password"
        android:drawableLeft="@drawable/edit_icon_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RealUsernameBox" />

    <Button
        android:id="@+id/signin_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:alpha="1"
        android:background="@drawable/round_corner"
        android:backgroundTint="#74000428"
        android:text="Sign up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_box2" />

    <TextView
        android:id="@+id/text_signup"
        android:layout_width="341dp"
        android:layout_height="63dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-thin"
        android:text="Create New Account"
        android:textColor="@android:color/white"
        android:textScaleX="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>