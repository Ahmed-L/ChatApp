<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    tools:context=".ChannelActivity_One">

    <EditText
        android:id="@+id/input_text_msg"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="7dp"
        android:layout_toStartOf="@+id/msg_send_btn"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter a message"
        android:inputType="textPersonName"
        android:padding="10dp"

        android:selectAllOnFocus="true"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="236dp" />

    <Button
        android:id="@+id/msg_send_btn"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_dialog_email"
        android:backgroundTint="?android:attr/textColorPrimary"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="619dp"
        tools:layout_editor_absoluteY="260dp" />

    <TextView
        android:id="@+id/Channel_one_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#3F51B5"
        android:text="Channel 1"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_text_msg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="10dp"
        android:focusable="auto" />

</RelativeLayout>